<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BabyTech.Pages.TakePhoto">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Vertical" Spacing="10" Padding="15">
                <Image x:Name="resultImage" />
                <Button Text="Take Photo" Clicked="TakeImage_Clicked" TextColor="White"  
                    FontSize="Large" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="#00C5FA" />
                <Button Text="Pick Photo" Clicked="PickImage_Clicked" TextColor="White"  
                    FontSize="Large" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="#00C5FA" />
                <Button Text="Analyze Photo" Clicked="Analyze_Clicked" TextColor="White"  
                    FontSize="Large" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="#00C5FA" />
                <Button Text="Send Photo" Clicked="SendPhoto_Clicked" TextColor="White"  
                    FontSize="Large" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="#00C5FA" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>